@model ArticleEditViewModel

@{
    ViewData["Title"] = "Write Article";
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@editorjs/editorjs@@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@editorjs/header@@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@editorjs/list@@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@editorjs/paragraph@@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@editorjs/quote@@latest"></script>
    <script>
        const editor = new EditorJS({
            holder: 'editor',
            tools: {
                header: {
                    class: Header,
                    config: {
                        levels: [2, 3, 4, 5, 6],
                        defaultLevel: 2,
                        placeholder: 'Header',
                    }
                },
                list: {
                    class: List,
                    inlineToolbar: true,
                },
                paragraph: {
                    class: Paragraph,
                    inlineToolbar: true,
                    config: {
                        placeholder: 'text'
                    }
                },
                quote: {
                    class: Quote,
                    inlineToolbar: true,
                }
            },
        });
    </script>
}

<form method="post">

    <div class="row">

        <div class="col-9">

            <div class="form-group">
                <label for="series">Series</label>
                <select class="form-select" id="series" name="series">
                    <option>(None)</option>
                    <option value="Test">test</option>
                </select>
            </div>

            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" id="title" name="title" maxlength="100" required>
            </div>

            <div class="form-group">
                <label>Content</label>
                <div class="border rounded">
                    <div id="editor"></div>
                </div>
            </div>
        </div>

        <div class="col-3">

            <div class="form-group">
                <label for="synposis">Synopsis</label>
                <textarea class="form-control" id="synposis" name="synopsis" maxlength="1000"></textarea>
            </div>

            <h5>Characters</h5>

            <div class="form-group">
                <label>Characters</label>
                <div>
                    @foreach (var option in Model.CharacterOptions) {
                        <input type="checkbox" class="btn-check" id="character-@option.Key" name="characterIds[]" value="@option.Key">
                        <label class="btn btn-sm btn-outline-primary me-1" for="character-@option.Key">@option.Value</label>
                    }
                </div>
            </div>

            <div class="form-group">
                <label for="moreCharacters">More Characters</label>
                <input class="form-control" id="moreCharacters" name="moreCharacters" maxlength="160" required>
            </div>

            <div class="form-group">
                <label for="tags">Tags</label>
                <input class="form-control" id="tags" name="tags" maxlength="160" required>
            </div>

            <h5>Credits</h5>

            <div class="form-group">
                <label for="author">Author</label>
                <input class="form-control" id="author" name="author" maxlength="50" required>
            </div>

            <div class="form-group">
                <label for="reviewer">Reviewer</label>
                <input class="form-control" id="reviewer" name="reviewer" maxlength="50" required>
            </div>

            <div class="form-group">
                <label>Sources</label>
                <input class="form-control" name="source[]" maxlength="50" required>
                <input class="form-control" name="source[]" maxlength="50" required>
                <input class="form-control" name="source[]" maxlength="50" required>
            </div>

            <h5>Media</h5>

            <div class="form-group">
                <label for="thumbnail">Thumbnail</label>
                <div class="text-center">
                    <div style="display:inline-block;width:120px;height:120px;background:#cce;"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="thumbnail">Instagram Image</label>
                <div class="text-center">
                    <div style="display:inline-block;width:320px;height:320px;background:#cce;"></div>
                </div>
            </div>

        </div>

    </div>

</form>
