<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>LEGGO News CMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="sidebar d-flex flex-column vh-100 p-3">
        <div>
            LEGGO News
        </div>
        <hr>
        <ul class="nav nav-pills nav-flush mb-auto">
            <li class="nav-item w-100">
                <a href="@Url.Action("Index", "Articles")" class="nav-link link-dark">
                    <i class="fas fa-pen-nib fa-fw me-3"></i>Articles
                </a>
            </li>
            <li class="nav-item w-100">
                <a href="@Url.Action("Index", "Media")" class="nav-link link-dark">
                    <i class="fas fa-photo-video fa-fw me-3"></i>Media
                </a>
            </li>
            <li class="nav-item w-100">
                <a href="@Url.Action("Index", "Tags")" class="nav-link link-dark">
                    <i class="fas fa-tag fa-fw me-3"></i>Tags
                </a>
            </li>
            <li class="nav-item w-100">
                <a href="@Url.Action("Index", "Characters")" class="nav-link link-dark">
                    <i class="fas fa-masks-theater fa-fw me-3"></i>Characters
                </a>
            </li>
            <li class="nav-item w-100">
                <a href="@Url.Action("Index", "Events")" class="nav-link link-dark">
                    <i class="fas fa-calendar fa-fw me-3"></i>Events
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" area-expanded="false">
                <img src="#" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>[username]</strong>
            </a>
            <ul class="dropdown-menu text-small shadow">
                <li><a href="#" class="dropdown-item">Profile</a></li>
                <li><a href="#" class="dropdown-item">Sign out</a></li>
            </ul>
        </div>
    </nav>

    <main>
        <div class="p-3">
            @RenderBody()
        </div>
    </main>
    
    <script src="https://kit.fontawesome.com/8e4a4c6700.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
            
</body>
</html>
