<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - LEGGO News CMS</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    @RenderSection("Stylesheets", required: false)

</head>
<body>

    <nav class="navbar navbar-expand navbar-dark bg-dark p-0">
        <div class="container-fluid">
            <div class="navbar-brand" style="font-family: times">
                LEGGO News
            </div>
            <div class="navbar-nav">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Signed in as {name}</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Edit Profile</a></li>
                        <li><a class="dropdown-item" href="#">Change Password</a></li>
                        <li class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign Out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <nav class="col-2 bg-light">
                <div class="nav-item flex-column">

                    <div class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-home fa-fw"></i> Dashboard
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="far fa-envelope fa-fw"></i>
                            Email
                        </a>
                    </div>

                    <h6 class="px-3 mt-4 text-muted">Content</h6>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Articles" asp-action="Index">
                            <i class="fas fa-pen-nib fa-fw"></i>
                            Articles
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Leads" asp-action="Index">
                            <i class="fas fa-lightbulb fa-fw"></i>
                            Leads
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Comments" asp-action="Index">
                            <i class="far fa-comments fa-fw"></i>
                            Comments
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Media" asp-action="Index">
                            <i class="fas fa-photo-video fa-fw"></i>
                            Media
                        </a>
                    </div>

                    <h6 class="px-3 mt-4 text-muted">Setup</h6>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Tags" asp-action="Index">
                            <i class="fas fa-tags fa-fw"></i>
                            Tags
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Characters" asp-action="Index">
                            <i class="fas fa-theater-masks fa-fw"></i>
                            Characters
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-shapes fa-fw"></i>
                            Templates
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">
                            <i class="fas fa-users fa-fw"></i>
                            Users
                        </a>
                    </div>

                    <h6 class="px-3 mt-4 text-muted">Information</h6>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Licenses" asp-action="Index">
                            <i class="far fa-handshake fa-fw"></i>
                            Licenses
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="far fa-question-circle fa-fw"></i>
                            Help and Tips
                        </a>
                    </div>

                </div>
            </nav>

            <main class="col-10 py-3 bg-white">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
